<EditForm
    id="modal-form"
    class="clr-form clr-form-horizontal"
    Model="@ModelFn()"
    OnValidSubmit="@ValidSubmitAsync">
    @ChildContent
</EditForm>

@code
{
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public Func<object> ModelFn { get; set; }

    [Parameter]
    public Func<Task> ValidSubmitAsync { get; set; }
}
